{
	"root": true,
	"extends": "wikimedia/common",
	"globals": {
		"OO": false
	},
	"overrides": [
		{
			"files": [
				"src/**/*.js",
				"tests/setup-browser.js"
			],
			"extends": "wikimedia/client-es6",
			"rules": {
				"no-var": "off",
				"no-implicit-globals": "off"
			}
		},
		{
			"files": [
				"tests/**/*.js"
			],
			"extends": "wikimedia/qunit"
		},
		{
			"files": [
				"Gruntfile.js",
				"karma*.js"
			],
			"extends": "wikimedia/server"
		}
	]
}
